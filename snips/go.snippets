snippet if "if"
if ${1:expr} {
	${0}
}
endsnippet

snippet eli "else if" i
else if ${1:expr} {
	${0}
}
endsnippet

snippet el "else" i
else {
	${0}
}
endsnippet

snippet for "for"
for ${1:expr} {
	${0}
}
endsnippet

snippet fori "for i"
for ${1:i} := ${2:0}; $1 < ${3:val}; $1++ {
	${0}
}
endsnippet

snippet fork "for k in range"
for ${1:k} := range ${2:c} {
	${0}
}
endsnippet

snippet forkv "for k, v in range"
for ${1:_}, ${2:v} := range ${3:c} {
	${0}
}
endsnippet
